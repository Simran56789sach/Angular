import { Component } from '@angular/core';
import { PayeeService } from '../../services/payee.service';
import { Payee } from '../../models/payee';

@Component({
  selector: 'app-payee-search',
  templateUrl: './payee-search.component.html',
  styleUrls: ['./payee-search.component.css']
})
export class PayeeSearchComponent {

  payees: Payee[] = [];
  customerId: number = 1; // Set the customerId accordingly
  payeeName: string = '';

  constructor(private payeeService: PayeeService) { }

  searchPayee(): void {
    this.payeeService.searchPayee(this.customerId, this.payeeName).subscribe(
      data => this.payees = data,
      error => console.error(error)
    );
  }
}
