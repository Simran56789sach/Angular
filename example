public bool CheckDuplicateAccountDAL(string accountNumber)
{
    return _context.Payees.Any(p => p.PayeeAccountNo == accountNumber);
}

public bool AddPayeeDAL(Payee payee)
{
    bool added = false;
    try
    {
        if (!CheckDuplicateAccountDAL(payee.PayeeAccountNo))
        {
            _context.Payees.Add(payee);
            _context.SaveChanges();
            added = true;
        }
    }
    catch (Exception ex)
    {
        throw new SystemException(ex.Message);
    }
    return added;
}
