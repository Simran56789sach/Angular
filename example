public bool CheckDuplicateAccount(string accountNumber)
{
    PayeeDAL payeeDAL = new PayeeDAL();
    return payeeDAL.CheckDuplicateAccountDAL(accountNumber);
}

public bool AddPayeeBL(Payee payee)
{
    if (CheckDuplicateAccount(payee.PayeeAccountNo))
    {
        return false; // Account number already exists
    }

    PayeeDAL payeeDAL = new PayeeDAL();
    return payeeDAL.AddPayeeDAL(payee);
}
