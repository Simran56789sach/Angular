import { NgModule } from '@angular/core';
import { RouterModule, Routes } from '@angular/router';
import { PayeeListComponent } from './components/payee-list/payee-list.component';
import { PayeeAddComponent } from './components/payee-add/payee-add.component';

const routes: Routes = [
  { path: 'payees', component: PayeeListComponent },
  { path: 'add-payee', component: PayeeAddComponent },
  { path: '', redirectTo: '/payees', pathMatch: 'full' }
];

@NgModule({
  imports: [RouterModule.forRoot(routes)],
  exports: [RouterModule]
})
export class AppRoutingModule { }
